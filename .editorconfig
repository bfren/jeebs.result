[*.cs]

# Set line endings
end_of_line = crlf

# Always end files with a newline
insert_final_newline = true

# CS1998: Async method lacks 'await' operators and will run synchronously
dotnet_diagnostic.CS1998.severity = silent

# IDE0039: Use local function
dotnet_diagnostic.IDE0039.severity = silent

# RCS1090: Add call to 'ConfigureAwait' (or vice versa)
dotnet_diagnostic.RCS1090.severity = silent

# RCS1197: Optimize StringBuilder.Append/AppendLine call
dotnet_diagnostic.RCS1197.severity = silent
